{
    "name": "chevere/xr",
    "description": "Lightweight debug utility",
    "homepage": "https://xr-debug.chevere.org",
    "keywords": [
        "chevere",
        "dump",
        "debug",
        "debugging"
    ],
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "Rodolfo Berrios",
            "email": "rodolfo@chevere.org",
            "homepage": "https://rodolfoberrios.com"
        }
    ],
    "require": {
        "php": ">=8.0",
        "chevere/chevere": "^0.7",
        "chevere/throwable-handler": "^0.6",
        "chevere/trace": "^0.4",
        "chevere/var-dump": "^0.4.x-dev",
        "chevere/xr-server": "^0.3.x-dev"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "symplify/easy-coding-standard": "^10.2"
    },
    "autoload": {
        "files": [
            "src/functions.php"
        ],
        "psr-4": {
            "Chevere\\Xr\\": "src/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "scripts": {
        "update-cs": "mkdir -p .ecs && cd .ecs && curl -O https://raw.githubusercontent.com/chevere/code-style/main/.ecs/ecs-chevere.php"
    },
    "scripts-descriptions": {
        "update-cs": "Update Chevere code style definition"
    }
}
